<div class="cl-col-100">
	<%= render 'player_update' ,  @ballbyball %>
	<%  @ballbyball['data']['data'].each do |ball| %>

	<div class="cl-min-inf" >
		<% ball['ball'].each do |delivery| %>
		<% if delivery['pre_text'].present? && delivery['pre_text'] == "<p>\n<b>Updates Only</b>\n</p>" %>
			<h2> <%= delivery['pre_text'].html_safe %> </h2>
		<% else %>
		<div id="comm_1485072283484" class="cl-col-100" >
			<div class="cl-bold-8">
				<div title="Jan 22, 2017 1:34:43 PM" class="cl-mat-mnu-wrp">
					<%= delivery['overs_actual'] %>
				</div>
			</div>
			<p class="cl-com-ln">
				<%= delivery['players'] %>,	<%= delivery['text'].html_safe %>
			</p>
		</div>
		<% end %>
		<%end%>
		<!--balls loop -->
	</div>

	<% end %>
	<div>

		<!-- loop through team-->
		<%  @ballbyball['data']['team'].each do |team| %>
		<!-- redundant required-->
		<div class="cl-ltst-wgt-hdr">
			<div class="cl-scrd-hdr-rw">
				<span><%= team['team_name']%></span>
			</div>
			<div class="cl-scrd-sub-hdr">
				<div class="cl-bold-27">
					Player
				</div>
				<div class="cl-col-33">
					primary role
				</div>
				<div class="cl-col-8">
					age
				</div>
			</div>
			<!-- redundant required-->
			<!-- need to loop-->
			<%  team['player'].each do |player| %>

			<div class="cl-scrd-itms">
				<div class="cl-col-27">
					<a href="/profiles/8934/samit-gohel" title="View profile of Samit Gohel" class="cl-text-link"> <%= player['known_as'] %> </a>
				</div>
				<div class="cl-col-33">
					<span class="text-gray"></span><%= player['player_primary_role'] %>
				</div>
				<div class="cl-col-8">
					<%= player['age_years'] %>
				</div>

			</div>

			<%end%>
			<!-- end of loop -->
		</div>
		<% end %>
		<!-- end of team loop -->
