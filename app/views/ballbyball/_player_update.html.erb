<%  for ball in @ballbyball['data']['data'] %>
	<% isbatsman = false %>
	<% isbowler = false %>
	<% if !isbatsman %>
	<div class="cb-min-inf cb-col-100 ng-scope" ng-if="match.miniscore.batsman">
		<% if ball['batsman'] != nil %>
		<div class="cb-col cb-col-100 cb-min-hdr-rw cb-bg-gray">
			<div class="cb-col cb-col-50">
				Batsman
			</div>
			<div class="cb-col cb-col-10 text-right">
				R
			</div>
			<div class="cb-col cb-col-10 text-right">
				B
			</div>
			<div class="cb-col cb-col-8 text-right">
				4s
			</div>
			<div class="cb-col cb-col-8 text-right">
				6s
			</div>
			<div class="cb-col cb-col-14 text-right">
				SR
			</div>
		</div>
		
		<% end %>

		<!-- batsmen loop -->
		<% if ball['batsman'] != nil %>
		<% ball['batsman'].each do |batsman| %>

		<div class="cb-col cb-col-100 cb-min-itm-rw ng-scope" ng-repeat="batsmen in match.miniscore.batsman">
			<div class="cb-col cb-col-50">
				<a class="cb-text-link ng-binding" ng-href="/profiles/10694/henry-nicholls" ng-bind="batsmen.full_name" href="/profiles/10694/henry-nicholls"><%= getPlayerName(@ballbyball, batsman['old_player_id'] ) %></a>
			</div>
			<div class="cb-col cb-col-10 ab text-right ng-binding" ng-bind="batsmen.r">
				<%= batsman['runs']%>
			</div>
			<div class="cb-col cb-col-10 ab text-right ng-binding" ng-bind="batsmen.b">
				<%= batsman['balls_faced']%>
			</div>
			<div class="cb-col cb-col-8 ab text-right ng-binding" ng-bind="batsmen['4s']">
				<%= batsman['fours']%>
			</div>
			<div class="cb-col cb-col-8 ab text-right ng-binding" ng-bind="batsmen['6s']">
				<%= batsman['sixes']%>
			</div>
			<div class="cb-col cb-col-14 text-right ng-binding" ng-bind="batsmen.sr">
				<%if batsman['balls_faced'].to_i != 0 %>
				<%= ((batsman['runs'].to_f / batsman['balls_faced'].to_f) *100).to_i %>
				<% else %>
				<%= 0 %>
				<% end%>
			</div>
		</div>

		<% end %>
		<% isbatsman = true %>
		<% end %>
		<!-- batsmen loop ends -->

	</div>

	<% end %>
	<!--balls loop -->

	<% if !isbowler %>
	<!-- bowler -->
	<div class="cb-min-inf cb-col-100 ng-scope" ng-if="match.miniscore.bowler">
		<% if ball['bowler'] != nil %>
		<div class="cb-col cb-col-100 cb-min-hdr-rw cb-bg-gray">
			<div class="cb-col cb-col-50">
				Bowler
			</div>
			<div class="cb-col cb-col-10 text-right">
				O
			</div>
			<div class="cb-col cb-col-8 text-right">
				M
			</div>
			<div class="cb-col cb-col-10 text-right">
				R
			</div>
			<div class="cb-col cb-col-8 text-right">
				W
			</div>
			<div class="cb-col cb-col-14 text-right">
				ECO
			</div>
		</div>
		<% end %>
		<!-- bolwer loop -->
		<% if ball['bowler'] != nil %>
		<% for bowler in ball['bowler'] %>

		<div class="cb-col cb-col-100 cb-min-itm-rw ng-scope" ng-repeat="bowler in match.miniscore.bowler">
			<div class="cb-col cb-col-50">
				<a class="cb-text-link ng-binding" ng-href="/profiles/8224/kamrul-islam-rabbi" ng-bind="bowler.full_name" href="/profiles/8224/kamrul-islam-rabbi"><%= getPlayerName(@ballbyball, bowler['old_player_id'] ) %></a>
			</div>
			<div class="cb-col cb-col-10 text-right ng-binding" ng-bind="bowler.o">
				<%= bowler['overs']%>
			</div>
			<div class="cb-col cb-col-8 text-right ng-binding" ng-bind="bowler.m">
				<%= bowler['maidens']%>
			</div>
			<div class="cb-col cb-col-10 text-right ng-binding" ng-bind="bowler.r">
				<%= bowler['conceded']%>
			</div>
			<div class="cb-col cb-col-8 text-right ng-binding" ng-bind="bowler.w">
				<%= bowler['wickets']%>
			</div>
			<div class="cb-col cb-col-14 text-right ng-binding" ng-bind="bowler.er">
				<% if bowler['overs'].to_i != 0%>
				<%= (bowler['conceded'].to_f / bowler['overs'].to_f ).round(1) %>
				<% else %>
				<%= 0 %>
				<% end%>
			</div>
		</div>

		<%end%>
		<% isbowler = true %>
		<%end%>
	</div>
	<% end %>
	<!-- bolwer loop ends -->
	<!-- end bowler -->
	<% end %>
