<section id="news">
	<div class="container">
		<div class="row text-primary col-sm-10 col-sm-offset-1">
			<h3>Cricket News</h3>
		</div>
		<div class="row col-sm-10 col-sm-offset-1">
			<% news = @news['data']%>
			<% news['data'].each do |type| %>

			<div class="cl-news-box">
				<div class="cl-nws-lst">
					<b class="cl-nws-ttl"><b class="cl-nws-hdln-ancr"
					title="<%= type['title'].html_safe %>"><%= type['title'].html_safe %></b></b>
					<div class="cl-nws-intr">
						<%= type['description'].html_safe %>
					</div>
				</div>

			</div>
			<% end %>
		</div>
	</div>
</section>

